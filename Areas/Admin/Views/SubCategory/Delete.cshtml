@model SubCategory

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
<h2 class="text-info">Sub Category Delete</h2>
<br />

<div class="border backgroundWhite">

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" class="form-control" disabled />
            </div>

        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Category.Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Category.Name" class="form-control" disabled />
            </div>

        </div>
        <div class="form-group row">
            <div class="col-5 offset-3">
                <partial name="_DeleteAndBacktoListButton" model="Model.Id" />
            </div>
        </div>
    </form>
</div>


@section Scripts{

    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}


}

